<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Sign_up">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Join Us"
        android:textColor="@color/grey"
        android:fontFamily="@font/font"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/font"
        android:text="Its easy to start your goals"
        android:textColor="@color/grey"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:elevation="20dp"
        android:fontFamily="@font/font"
        android:shadowColor="@color/black"
        android:text="Full Name"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/personName"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/imput_bg"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:paddingStart="8dp"
        android:gravity="center"
        android:hint="Enter your full name"
        android:inputType="textPersonName"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"

        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:elevation="14dp"
        />/>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font"


        android:text="Email"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EmailAddress"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
             android:background="@drawable/imput_bg"
              android:drawableStart="@drawable/baseline_email_24"
        android:paddingStart="8dp"
        android:gravity="center"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:elevation="14dp"/>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font"
        android:text="Password"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@drawable/imput_bg"
        android:ems="10"
        android:gravity="center"
        android:drawableStart="@drawable/baseline_vpn_key_24"
        android:paddingStart="8dp"
        android:fontFamily="@font/font"
        android:hint="Enter a new password"
        android:inputType="textPassword"
        android:textColor="@color/grey"
        android:elevation="14dp"
        android:textColorHint="@color/grey"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/font"
        android:text="Confirm password"
        android:textColor="@color/grey"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:fontFamily="@font/font"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/imput_bg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="center"
        android:hint="Retype your password"
        android:drawableStart="@drawable/baseline_vpn_key_24"
        android:paddingStart="8dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:elevation="14dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
        android:background="@drawable/btn_bg_white"
        android:text="Sign Up"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font"
        android:text="Already have an Account?"
        android:textColor="@color/grey"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:text="OR"
        android:fontFamily="@font/font"
        android:textColor="@color/grey"/>

    <Button
        android:id="@+id/with_google"
        android:layout_width="246dp"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="@color/black"
        android:fontFamily="@font/font"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_google"
        android:text="Sign up using Google"
        />








</LinearLayout>
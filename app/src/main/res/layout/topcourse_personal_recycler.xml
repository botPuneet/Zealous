<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"

    android:elevation="10dp"
    android:background="@drawable/imput_bg"
    >
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:background="@drawable/imput_bg"

        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/top_IMG1"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:elevation="10dp"
            android:src="@drawable/c"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_bg_blacck"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/favourite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="4.5/5"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"

        android:background="@drawable/imput_bg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/top_Title1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/font"
            android:textStyle="bold"
            android:text="Stock market"/>
        <TextView
            android:id="@+id/top_Descp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="complete knowledge of stock market in the india for maximum profit"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15dp"
            android:fontFamily="@font/font"
            android:textColor="@color/black"
            android:layout_marginStart="25dp"
            android:textStyle="bold"
            android:text="Duration - "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font"
            android:text="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font"
            android:text=" weeks"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:fontFamily="@font/font"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:text="â‚¹1000/-"/>
    </LinearLayout>
        </LinearLayout>







</androidx.appcompat.widget.LinearLayoutCompat>
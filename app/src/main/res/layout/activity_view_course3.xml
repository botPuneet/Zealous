<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    tools:context=".viewCourse_3">
    <TextView
        android:id="@+id/tittle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="Add a Course "
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/black"
        android:textSize="24dp"
        />

    <LinearLayout
        android:id="@+id/touchh"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/btn_bg_white"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/button3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_bg_blacck"
            android:gravity="center"

            android:layout_marginLeft="10dp"
            android:padding="3dp"
            app:srcCompat="@drawable/indiacotor_inactive_onboard"
            />
        <TextView
            android:id="@+id/topic555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"

            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            android:text="Html 5 web devlopement"/>


    </LinearLayout>


    <TextView
        android:id="@+id/introA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Introduction"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="300dp"
        android:layout_height="300dp"
 android:visibility="gone"
        tools:src="@drawable/a" />
    <LinearLayout
        android:id="@+id/lll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        >

        <VideoView
            android:id="@+id/introvideoView"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_white"
        android:text="View pdf"
        android:backgroundTint="@color/black"
            android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_white"
        android:text="View pdf"
        android:backgroundTint="@color/black"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/lllink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        >

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


             />
    </LinearLayout>



</LinearLayout>
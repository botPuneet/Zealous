<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_bottom"
    tools:context=".Bottomsheet_1">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="44dp"
      android:layout_gravity="center_horizontal"
        android:fontFamily="@font/font"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Welcome to Zelous Tube Application"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/font"
        android:layout_marginTop="230dp"
        android:padding="10dp"
        android:textColor="@color/light_grey"
        android:text="Hand-picked instructor and expertly crafted courses, designed for the modern students and entrepreneur"/>



    <Button
        android:id="@+id/becomeInstructor"
        android:layout_width="200dp"
        android:fontFamily="@font/font"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_blacck"
        android:text="Are you a Instructor"
        android:textColor="@color/black"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottomsheet"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal"/>


</FrameLayout>
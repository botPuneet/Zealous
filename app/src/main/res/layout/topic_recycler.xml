                android:layout_marginLeft="10dp"
                android:padding="3dp"
                app:srcCompat="@drawable/baseline_add_24"
                />
            <TextView
                android:id="@+id/topic555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Sign_in">

    <TextView
        android:id="@+id/textView"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="Sign in to your Acccount"
        android:textColor="@color/grey"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
       android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:text="Easy to learn and discover new skills"
        android:textColor="@color/grey"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:text="Email"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/imput_bg"
        android:drawableStart="@drawable/baseline_email_24"
        android:elevation="14dp"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/light_grey" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"

        android:layout_marginTop="55dp"
        android:text="Password"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:fontFamily="@font/font"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/imput_bg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your password"
        android:drawableStart="@drawable/baseline_vpn_key_24"
        android:paddingStart="8dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/light_grey"
        android:elevation="14dp"
        android:inputType="textPassword"/>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_white"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
        android:text="Or create new Account"
        android:textColor="@color/grey"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginRight="15dp"
        android:text="OR"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font"
        android:textColor="@color/grey"/>

    <Button
        android:id="@+id/with_google"
        android:layout_width="246dp"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="@color/black"
        android:fontFamily="@font/font"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg_white"
        android:padding="8dp"
        android:drawableLeft="@drawable/ic_google"
        android:text="Sign in using Google"
        />






</LinearLayout>